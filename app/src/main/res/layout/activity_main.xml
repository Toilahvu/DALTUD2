<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layoutDescription="@xml/activity_main_scene"
    tools:context=".MainActivity">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#18191A"
        tools:context=".View.MainActivity">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include layout="@layout/header" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:background="#3A3D3D">

                <Button
                    android:id="@+id/button"
                    android:layout_width="362dp"
                    android:layout_height="match_parent"
                    android:background="#00000000"
                    android:gravity="start|center_vertical"
                    android:text="Trang chủ"
                    tools:ignore="HardcodedText"/>

                <ImageButton
                    android:id="@+id/btnPopup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:contentDescription="dropdown option"
                    app:srcCompat="@mipmap/popupmenu"
                    tools:ignore="HardcodedText" />

            </LinearLayout>




            <LinearLayout
                android:id="@+id/body"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#18191A"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Comics:"
                    android:textColor="@color/white"
                    android:textSize="30sp"
                    android:textStyle="bold|italic"
                    tools:ignore="HardcodedText" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/ListComic"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:padding="8dp"
                    android:background="@android:color/transparent">

                    <ImageButton
                        android:id="@+id/btnBackwardFast"
                        android:layout_width="65dp"
                        android:layout_height="50dp"
                        android:textColor="#FFFFFF"
                        android:textSize="18sp"
                        android:visibility="gone"
                        app:srcCompat="@mipmap/backwardfast"
                        app:tint="@color/white"
                        android:background="@android:color/transparent"/>

                    <ImageButton
                        android:id="@+id/btnBackwardStep"
                        android:layout_width="65dp"
                        android:layout_height="50dp"
                        android:visibility="gone"
                        app:srcCompat="@mipmap/backwardstep"
                        app:tint="@color/white"
                        android:background="@android:color/transparent"/>

                    <LinearLayout
                        android:id="@+id/pageNumbersLayout"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp" />

                    <ImageButton
                        android:id="@+id/btnForwardStep"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        app:srcCompat="@mipmap/forwardstep"
                        android:background="@android:color/transparent"
                        app:tint="@color/white" />

                    <ImageButton
                        android:id="@+id/btnForwardFast"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        app:srcCompat="@mipmap/forwardfast"
                        app:tint="@color/white"
                        android:background="@android:color/transparent"/>


                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/footer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Chỗ này se la` footer them ten thanh vien voi loi mot so thong tin "
                    tools:ignore="HardcodedText"/>
            </LinearLayout>
        </LinearLayout>


    </androidx.core.widget.NestedScrollView>

    <!-- Nút Lên Header ngay tức thì-->
    <Button
        android:id="@+id/topButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="end|bottom"
        android:layout_margin="16dp"
        android:background="@drawable/button_round"
        android:text="↑"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:elevation="8dp"
        android:padding="8dp"
        tools:ignore="HardcodedText" />

</FrameLayout>






