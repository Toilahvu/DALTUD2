<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:paddingBottom="5dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/adsadsa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="10dp"
            android:text="Bình luận"
            android:textColor="#FF7700"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/tvLuotBinhLuan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="Bình luận"
            android:textColor="#FF7700"
            android:textSize="20dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/dasda"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Vào fanpage like và theo dõi để ủng hộ tụi mình nhé"
        android:textColor="@color/white"
        android:layout_marginBottom="5dp"
        android:textSize="14dp" />

    <EditText
        android:id="@+id/edtBinhLuan"
        android:layout_width="match_parent"
        android:layout_height="78dp"
        android:ems="10"
        android:gravity="start|top"
        android:backgroundTint="@color/white"
        android:background="@color/white"
        android:textColor="@color/black"
        android:inputType="textMultiLine" />

    <Button
        android:id="@+id/btnDang"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:background="@drawable/btn_chu_nhat_tim_hong"
        android:text="Đăng" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvDanhSachComment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"/>

    <Button
        android:id="@+id/btnXemThem"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:background="@drawable/btn_chu_nhat_tim_hong"
        android:text="Xem thêm" />
</LinearLayout>
